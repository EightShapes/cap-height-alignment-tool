@mixin text-crop($line-height: !!LINE-HEIGHT!!, $top-adjustment: 0px, $bottom-adjustment: 0px) {
    $offset-top: max((!!TOP-CROP!! + ($line-height - !!LINE-HEIGHT!!) * (!!FONT-SIZE!! / 2)), 0) / !!FONT-SIZE!!;
    $offset-bottom: max((!!BOTTOM-CROP!! + ($line-height - !!LINE-HEIGHT!!) * (!!FONT-SIZE!! / 2)), 0) / !!FONT-SIZE!!;

    line-height: $line-height;

    &::before,
    &::after {
        content: '';
        display: block;
        height: 0;
        width: 0;
    }

    &::before {
        margin-bottom: calc(-#{$offset-top}em + #{$top-adjustment});
    }

    &::after {
        margin-top: calc(-#{$offset-bottom}em + #{$bottom-adjustment});
    }
}
