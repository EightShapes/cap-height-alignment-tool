{% macro text_crop_samples() %}
    <div class="es-text-crop-samples typeface-actions tool-section">
        <h2 class="tool-section__title">Samples</h2>
        <label for="es-text-crop-toggle" class="es-text-crop-samples__crop-toggle">
            <input id="es-text-crop-toggle" type="checkbox" checked>
            Enable Text Crop Mixin
        </label>

        <label>Button</label>
        <button class="es-text-crop-samples__button cap-aligned-line-height sample-font-result">
            Click Me
        </button>

        <label>Button With Icon</label>
        <button class="es-text-crop-samples__button es-text-crop-samples__button-with-icon cap-aligned-line-height sample-font-result">
            {{ icon(icon_name="twitter", class="es-text-crop-samples__button-with-icon-icon") }}
            <span class="es-text-crop-samples__button-with-icon-text">
                Click Me
            </span>
        </button>

        <label>Flexbox Top aligned Text with Image</label>
        <div class="es-text-crop-samples__flexbox">
            <img class="es-text-crop-samples__flexbox-image" src="http://placehold.it/100x100" alt="">
            <p class="cap-aligned-line-height sample-font-result es-text-crop-samples__flexbox-text">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nesciunt incidunt veniam itaque inventore, placeat, mollitia unde reiciendis, aut facere possimus dolor nihil nobis enim dolorem eius temporibus eveniet consectetur delectus.
            </p>
        </div>

        <label>Flexbox Bottom aligned Text with Image</label>
        <div class="es-text-crop-samples__flexbox es-text-crop-samples__flexbox--bottom-aligned">
            <img class="es-text-crop-samples__flexbox-image" src="http://placehold.it/100x100" alt="">
            <p class="cap-aligned-line-height sample-font-result es-text-crop-samples__flexbox-text">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nesciunt incidunt veniam itaque inventore, placeat, mollitia unde reiciendis, aut facere possimus dolor nihil nobis enim dolorem eius temporibus eveniet consectetur delectus.
            </p>
        </div>

        <div class="visible-padded-box cap-aligned-line-height sample-font-result">
            16px font with 20px padding
        </div>
        <div class="visible-padded-box visible-padded-box--large cap-aligned-line-height sample-font-result">
            32px font with 20px padding
        </div>
        <div class="visible-padded-box visible-padded-box--extra-large cap-aligned-line-height sample-font-result">
            64px font with 20px padding
        </div>
    </div>
{% endmacro %}
