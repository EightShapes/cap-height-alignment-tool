{% macro copy_code_button(target) %}
    <a href="#" class="es-code-snippet__copy-button" data-clipboard-target="{{ target }}">
        {{ icon(icon_name="clipboard", class="es-code-snippet__copy-button-icon") }}
        <span class="es-code-snippet__copy-button-text">Copy to Clipboard</span>
        <span class="es-code-snippet__copy-response">Press Ctrl + C to copy</span>
    </a>
{% endmacro %}

{% macro code_snippet() %}
    <div class="es-text-crop-code-snippet__tabs-wrap">
        <div class="esds-tabs esds-tabs--code-snippets">
            <label class="esds-tabs__label" for="scss">
                <input type="radio" id="scss" name="style-preprocessor" class="esds-tabs__label-input" checked>
                <span class="esds-tabs__label-text">
                    SCSS
                </span>
            </label>
            <label class="esds-tabs__label" for="less">
                <input type="radio" id="less" name="style-preprocessor" class="esds-tabs__label-input">
                <span class="esds-tabs__label-text">
                    LESS
                </span>
            </label>
            <label class="esds-tabs__label" for="stylus">
                <input type="radio" id="stylus" name="style-preprocessor" class="esds-tabs__label-input">
                <span class="esds-tabs__label-text">
                    Stylus
                </span>
            </label>
        </div>
    </div>
    
    <div id="style-preprocessor-scss" class="mixin-code-tab-pane">
        {% set scss_source %}
            {% include 'includes/scss_mixin.njk' %}
        {% endset %}
        {{ esds_doc.code_snippet(source=scss_source, language="scss", preformatted="true", class="esds-doc-code-snippet--tall") }}
    </div>

    <div id="style-preprocessor-less" class="mixin-code-tab-pane">
        {% set less_source %}
            {% include 'includes/less_mixin.njk' %}
        {% endset %}
        {{ esds_doc.code_snippet(source=less_source, language="less", preformatted="true", class="esds-doc-code-snippet--tall") }}
    </div>

    <div id="style-preprocessor-stylus" class="mixin-code-tab-pane">
        {% set stylus_source %}
            {% include 'includes/stylus_mixin.njk' %}
        {% endset %}
        {{ esds_doc.code_snippet(source=stylus_source, language="stylus", preformatted="true", class="esds-doc-code-snippet--tall") }}
    </div>
{% endmacro %}
