{% import "@eightshapes/esds-library/components/esds.njk" as esds with context %}
{% import "esds-doc/components/esds-doc.njk" as esds_doc with context %}
{% import "components/eightshapes-text-crop.njk" as components with context %}

<html>
    <head>
        <title>EightShapes Text Crop</title>
        <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
        <link rel="stylesheet" href="http://eightshapes.com/css/global.css">
        <link rel="stylesheet" href="/styles/eightshapes-text-crop.css">
        <meta name="HandheldFriendly" content="True" />
        <meta name="MobileOptimized" content="320" />
        <meta name="viewport" content="width=device-width, minimum-scale=1.0" />
        <!-- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading -->
        <meta http-equiv="cleartype" content="on">
        <script src="/scripts/dependencies/clipboard.min.js"></script>
        <script src="/scripts/dependencies/jquery.min.js"></script>
        <!-- These scripts are all the dependencies for the draggable widget from jQuery UI -->
        <script src="/scripts/dependencies/widget.js"></script>
        <script src="/scripts/dependencies/data.js"></script>
        <script src="/scripts/dependencies/scroll-parent.js"></script>
        <script src="/scripts/dependencies/mouse.js"></script>

        <script src="/scripts/dependencies/prism.js"></script>
        <script src="/scripts/dependencies/prism-less.min.js"></script>
        <script src="/scripts/dependencies/prism-scss.min.js"></script>
        <script src="/scripts/dependencies/prism-stylus.min.js"></script>
        <script src="/scripts/dependencies/plugin.js"></script>
        <script src="/scripts/dependencies/safe-active-element.js"></script>
        <script src="/scripts/dependencies/safe-blur.js"></script>
        <script src="/scripts/dependencies/draggable.js"></script>
        <script src="/scripts/dependencies/jquery.ui.touch-punch.js"></script> <!-- allows touch events to trigger jquery UI interactions -->
        <!-- End draggable jQuery UI dependencies -->

        <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
        <script src="/scripts/dependencies/svg4everybody.min.js"></script>
        <script>
            svg4everybody();
        </script>
        <script src="/scripts/dependencies/esds-doc.js"></script>
        <script src="/scripts/eightshapes-text-crop.js"></script>
    </head>
    <body>
        {% call esds.row(background="brand", class="eswt-headcrumb") %}
            <h1 class="eswt-headcrumb__brand">
                <a href="http://eightshapes.com/design-systems.html" class="eswt-headcrumb__link">
                    {{ components.icon(icon_name="eightshapes-mark", class="eswt-headcrumb__brand-mark") }}
                    <span class="eswt-headcrumb__brand-name">eightshapes</span>
                    {{ esds.icon(name="angle-right", class="eswt-headcrumb__delimiter") }}
                    <span class="eswt-headcrumb__crumb-text">Design Systems</span>
                </a>
            </h1>
        {% endcall %}
        {% call esds.row(background="dark", class="esds-row--hero-inset eswt-hero") %}
            <h1 class="eswt-hero__title">Text Crop</h1>
            <p class="eswt-hero__lead">
                Want to rid your components of that pesky space above and below a block of text due to line height? Use our tool to create a mixin for your typography.
            </p>
        {% endcall %}
        {% call esds.row(background="light", class="eswt-step-row") %}
            <h4 class="eswt-step-row__step-number">Step 1</h4>
            <h2 class="eswt-step-row__title">Configure the Crop</h2>
            {{ components.font_form() }}
            {{ components.text_crop_measurement_tool() }}
        {% endcall %}
        {% call esds.row(background="white", class="eswt-step-row") %}
            <h4 class="eswt-step-row__step-number">Step 2</h4>
            <h2 class="eswt-step-row__title">Confirm the Result</h2>
            {{ components.text_crop_samples() }}
        {% endcall %}
        {% call esds.row(background="light", class="eswt-step-row") %}
            <h4 class="eswt-step-row__step-number">Step 3</h4>
            <h2 class="eswt-step-row__title">Copy the Code</h2>
            {{ components.code_snippet() }}
        {% endcall %}
