{% macro font_form() %}
    <form method="GET" class="es-font-form">
        <div class="es-font-form__content">
            <p class="es-font-form__copy">
                Generate style mixins to crop vertical white space of text to cap height and baseline.
            </p>
            <p class="es-font-form__copy">
                Select font attributes, then drag the sliders to crop as much or as little white space as you want.
            </p>
        </div>
        <div class="es-tabs">
            <label class="es-tabs__label" for="select-google-font">
                <input type="radio" id="select-google-font" name="typeface-selection" class="es-tabs__label-input" checked>
                <span class="es-tabs__label-text">
                    Google Font
                </span>
            </label>
            <label class="es-tabs__label" for="use-custom-typeface">
                <input type="radio" id="use-custom-typeface" name="typeface-selection" class="es-tabs__label-input">
                <span class="es-tabs__label-text">
                    Custom Typeface
                </span>
            </label>
        </div>
        <div class="typeface-action typeface-action--typeface">
            <label class="es-font-form__label" for="typeface">Select a Google Font</label>
            <div class="es-font-form__select">
                <select class="es-font-form__select-input" name="typeface" id="typeface">
                    <!-- Built out dynamically with JS -->
                </select>
                <div class="es-font-form__select-visual-wrap"></div>
                <span class="es-font-form__select-open-indicator">
                    {{ icon(name='caret-down', class='es-font-form__select-open-icon', path=icon_path) }}
                </span>
            </div>
        </div>
        

        <div class="typeface-action typeface-action--hidden typeface-action--custom-typeface-name">
            <label class="es-font-form__label" for="custom-typeface-name">
                Typeface Name
            </label>
            <input class="es-font-form__input" type="text" id="custom-typeface-name" name="custom-typeface-name" value="Helvetica">
            <span class="es-font-form__microcopy">CSS font-family</span>
        </div>

        <div class="typeface-action typeface-action--hidden  typeface-action--custom-typeface-url">
            <label class="es-font-form__label" for="custom-typeface-url">
                Typeface Url (optional)
            </label>
            <input class="es-font-form__input" type="text" id="custom-typeface-url" name="custom-typeface-url" placeholder="https://my-link-to-hosted-webfont.example.com/?font=Font+Name">
        </div>

        <div class="typeface-action typeface-action--hidden typeface-action--custom-typeface-weight">
            <label class="es-font-form__label" for="custom-typeface-weight">
                Typeface Weight (optional)
            </label>
            <input class="es-font-form__input" type="text" id="custom-typeface-weight" name="custom-typeface-weight" value="400">
            <span class="es-font-form__microcopy">CSS font-weight</span>
        </div>

        <div class="typeface-action typeface-action--hidden typeface-action--custom-typeface-style">
            <label class="es-font-form__label" for="custom-typeface-style">
                Typeface Style (optional)
            </label>
            <input class="es-font-form__input" type="text" id="custom-typeface-style" name="custom-typeface-style" value="normal">
            <span class="es-font-form__microcopy">CSS font-style</span>
        </div>
        
        <div class="typeface-action typeface-action--weight-and-style">
            <label class="es-font-form__label" for="weight-and-style">Weight &amp; Style</label>

            <div class="es-font-form__select">
                <select class="es-font-form__select-input" name="weight-and-style" id="weight-and-style">
                    <option value="400">400 (normal)</option>
                    <option value="400i">400 Italic (normal)</option>
                    <option value="700">700 (bold)</option>
                </select>
                <div class="es-font-form__select-visual-wrap"></div>
                <span class="es-font-form__select-open-indicator">
                    {{ icon(name='caret-down', class='es-font-form__select-open-icon', path=icon_path) }}
                </span>
            </div>
        </div>
        
        <div class="typeface-action typeface-action--size">
            <label class="es-font-form__label" for="size">Size</label>
            <input class="es-font-form__input" name="size" id="size" type="text" value="36">
        </div>
        
        <div class="typeface-action typeface-action--line-height">
            <label class="es-font-form__label" for="line-height">Default Line Height</label>
            <input class="es-font-form__input" name="line-height" id="line-height" type="text" value="1.2">
        </div>
    </form>
{% endmacro %}
